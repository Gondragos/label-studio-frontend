.annotation
  padding 16px

  &__info
    height 32px
    display flex
    align-items center
    justify-content space-between

  &__actions
    height 36px
    display grid
    grid-template-columns 1fr 1fr
    grid-column-gap 12px

.history
  display flex

  &__action
    width 36px
    height 36px
    border none
    padding 0 !important
    background none !important

    &:disabled
      opacity 0.6

    svg
      display block

    &_delete
      color #DD0000
